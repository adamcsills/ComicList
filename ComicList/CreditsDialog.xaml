<UserControl x:Class="ComicList.CreditsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="10">
        <TextBlock TextWrapping="Wrap">
            <Run Text="Thanks to www.comiclist.com for this awesome list of weekly comics that powers this application."></Run>
            <Run Text="Many thanks to all the sources they get this info from also!"></Run>
            <LineBreak></LineBreak>
            <LineBreak></LineBreak>
            <Run Text="Please visit them, click their affiliate links and buy some comics."></Run>
            <LineBreak></LineBreak>
            <Hyperlink NavigateUri="http://www.comiclist.com" RequestNavigate="Hyperlink_RequestNavigate">http://www.comiclist.com</Hyperlink>
            <LineBreak></LineBreak>
            <LineBreak></LineBreak>
            <Run Text="The data provided by ComicList.com used by this application uses is licensed under the Creative Commons Attribution-Noncommercial-Share Alike 3.0 United States License."></Run>
            <LineBreak></LineBreak>
            <Run Text="To view a copy of this license visit"></Run>
            <Hyperlink NavigateUri="http://creativecommons.org/licenses/by-nc-sa/3.0/us/" RequestNavigate="Hyperlink_RequestNavigate">http://creativecommons.org/licenses/by-nc-sa/3.0/us/</Hyperlink>
            <LineBreak></LineBreak>
            <LineBreak></LineBreak>
            <Run Text="This application is licensed under the GPL v3 and copyright the original code submitters"></Run>
            <LineBreak></LineBreak>
            <Hyperlink NavigateUri="https://www.gnu.org/licenses/gpl.html" RequestNavigate="Hyperlink_RequestNavigate">https://www.gnu.org/licenses/gpl.html</Hyperlink>
        </TextBlock>
        
        <Button Content="close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{DynamicResource FlatButtonStyle}" Click="Button_Click"></Button>
    </Grid>
</UserControl>
